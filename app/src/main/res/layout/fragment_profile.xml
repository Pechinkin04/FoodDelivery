<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:id="@+id/name_l"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:drawablePadding="15dp"
        android:elevation="1dp"
        android:hint="Почта"
        android:orientation="horizontal"
        android:outlineSpotShadowColor="@color/startGreenColor"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/yeonsung"
            android:gravity="center"
            android:text="Имя"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="36dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/lato"
            android:inputType="text"
            android:text="Александр"
            android:textColor="#B8B2B2"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/adress_l"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:drawablePadding="15dp"
        android:elevation="1dp"
        android:hint="Email"
        android:orientation="horizontal"
        android:outlineSpotShadowColor="@color/startGreenColor"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_l">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/yeonsung"
            android:text="Адрес"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/profile_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/lato"
            android:gravity="center_vertical"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:text="г. Самара, Московское шоссе 34Б"
            android:textColor="#B8B2B2"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

